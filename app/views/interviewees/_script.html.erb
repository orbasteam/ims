<script>
  $(function(){
    $(".activities").click(function(){

      $.ajax({
        url: '/interviewees/' + $(this).data('id') + '/activities',
        method: 'GET'
      }).done(function(data){

        bootbox.dialog({
          message: data,
          title: "活動記錄",
          onEscape: function() { },
          backdrop: true,
          buttons: {
            success: {
              label: "關閉",
              className: "btn-default"
            }
          }
        });

      });

    });

    if($("#nav").length) {
      setNavWidth();
      var navWidth = $(".nav-container").width();
      var $activeNav = $("#nav").find('li.active');
      var activeNavOffset = $activeNav.offset().left;

      if(activeNavOffset > navWidth) {
        $(".nav-container").animate({
          scrollLeft: activeNavOffset + $activeNav.outerWidth(true)
        }, 1000);
      }
    }
  });

  var setNavWidth = function() {
    var width = 1;
    $("#nav").find('li').each(function(){
      width += $(this).outerWidth(true);
    });
    $("#nav").width(width);
  }
</script>